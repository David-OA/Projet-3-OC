<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".history">

    <ListView
        android:id="@+id/list_history_mood"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <LinearLayout
        android:id="@+id/week"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/light_sage"
        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Il y a une semaine" />

            <ImageButton
                android:id="@+id/one_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:src="@drawable/ic_comment_black_48px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixdays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/banana_yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Il y a six jours" />

        <ImageButton
            android:id="@+id/six_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_comment_black_48px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fivedays"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/cornflower_blue_65">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Il y a cinq jours" />

        <ImageButton
            android:id="@+id/five_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_comment_black_48px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourdays"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/faded_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Il y a quatre jours" />

        <ImageButton
            android:id="@+id/four_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_comment_black_48px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/threedays"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/warm_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Il y a trois jours" />

        <ImageButton
            android:id="@+id/three_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_comment_black_48px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/beforeyesterday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/cornflower_blue_65">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Avant-hier" />

        <ImageButton
            android:id="@+id/before_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_comment_black_48px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yesterday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Hier" />

        <ImageButton
            android:id="@+id/yester_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_comment_black_48px" />
    </LinearLayout>

</LinearLayout>